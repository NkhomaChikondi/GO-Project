<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:ViewModel="clr-namespace:GO.ViewModels.Subtasks"
             x:Class="GO.Views.SubTaskView.AddSubtask"
             xmlns:helpers="clr-namespace:GO.Font"
             Title="Add Subtask">
    <ContentPage.BindingContext>
        <ViewModel:AddSubtaskViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <OnPlatform x:Key="MaterialFontFamily" x:TypeArguments="x:String">
                <On Platform="Android" Value="materialdesignicons-webfont.ttf#Material Design Icons"/>
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.ToolbarItems>
        <ToolbarItem 
                 IconImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                   Glyph={x:Static helpers:IconFont.Help},Size=20,Color=#feeafa}"                     
                 Order="Primary"
                 Priority="0"
            Command="{Binding HelpCommand}"
        />

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Grid.ColumnSpan="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.ColumnSpan="4">
                    <StackLayout Grid.Row="0" Grid.ColumnSpan="4"  Orientation="Vertical" Margin="0,10">
                        <StackLayout HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                            <Label Text="Create A New Subtask"  FontAttributes="Bold" FontSize="Large"/>
                            <Image Source="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                                 Glyph={x:Static helpers:IconFont.FormatListText},Size=25,Color=#61a5c2}"/>
                        </StackLayout>
                        <StackLayout HorizontalOptions="CenterAndExpand">
                            <Label Text="Break your tasks into Subtasks" Margin="19,0" TextColor="Gray" FontAttributes="Italic" FontSize="Medium"/>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Row="1" Grid.ColumnSpan="4" Margin="10" Orientation="Vertical">
                        <Label Text=" Subtask Name:"  TextColor="#61a5c2" FontSize="17" FontAttributes="Bold" />
                        <Editor Text="{Binding Name}" Placeholder="50 maximum characters" MaxLength="50" AutoSize="TextChanges" />
                    </StackLayout>
                    <StackLayout  Grid.Row="2" Grid.ColumnSpan="4" Margin="0,15" Orientation="Vertical">
                        <StackLayout  Grid.ColumnSpan="4">
                            <Label Text="Set Duration"  TextColor="#61a5c2" FontSize="17" FontAttributes="Bold"  HorizontalOptions="CenterAndExpand"/>
                        </StackLayout>
                        <StackLayout Grid.ColumnSpan="4" Margin="35,0" Orientation="Horizontal">
                            <StackLayout Grid.ColumnSpan="2" Orientation="Vertical">
                                <Label Margin="12,0" Text="Start date" FontAttributes="Bold" FontSize="16"/>
                                <StackLayout Orientation="Horizontal" HorizontalOptions="StartAndExpand">
                                    <DatePicker x:Name="subtaskstartdate" Date="{Binding StartDate}" FontSize="15"/>
                                    <Image Margin="-10,0" HorizontalOptions="StartAndExpand" Source="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                                 Glyph={x:Static helpers:IconFont.ChevronDown},Size=25,Color=Black}"/>
                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="4"  Margin="35,0,0,0" Orientation="Horizontal">
                                <StackLayout Margin="75,0,0,0"  Grid.ColumnSpan="2" Orientation="Vertical">
                                    <Label Margin="12,0" Text="End date" FontAttributes="Bold"  FontSize="16"/>
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="EndAndExpand">
                                        <DatePicker x:Name="subtaskenddate" Date="{Binding EndDate}" FontSize="15"/>
                                        <Image Margin="-10,0" HorizontalOptions="EndAndExpand" Source="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                                 Glyph={x:Static helpers:IconFont.ChevronDown},Size=25,Color=Black}"/>
                                    </StackLayout>
                                </StackLayout>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Row="3" Grid.ColumnSpan="4">

                        <Button  Grid.Column="0"  Grid.ColumnSpan="4" Text="Add Subtask" Command="{Binding subTaskAddCommand}" CornerRadius="15" Margin="20,20,20,0"  BackgroundColor="#61a5c2" CharacterSpacing="10"
                     
                        ></Button>

                    </StackLayout>
                </StackLayout>
          
            </Grid>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>