<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:Viewmodel="clr-namespace:GO.ViewModels.TaskInGoals" xmlns:xct="http://xamarin.com/schemas/2020/toolkit" xmlns:plugin="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
             x:Class="GO.Views.GoalTask.GoalTaskPage"
               Title="Tasks In Goal"
              x:Name="goaltaskpage"
             BackgroundColor="LightGray">
    <ContentPage.BindingContext>
        <Viewmodel:GoalTaskViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <xct:ItemTappedEventArgsConverter x:Key="ItemTappedEventArgsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height=" Auto"/>
        </Grid.RowDefinitions>
        <AbsoluteLayout Grid.Row="1" Grid.ColumnSpan="3">
            <ListView ItemsSource="{Binding goalTasks}"
                  AbsoluteLayout.LayoutFlags="All"
						  AbsoluteLayout.LayoutBounds="0,0,1,1"
                   CachingStrategy="RecycleElement"
                   HasUnevenRows="True" 
                   Grid.ColumnSpan="4"
                   RefreshCommand="{Binding RefreshCommand}"
                   RefreshControlColor="Red"
                   SelectionMode="None"
                   SeparatorVisibility="None"
                   IsRefreshing="{Binding IsBusy,Mode=OneWay}">
                <ListView.Behaviors>

                    <xct:EventToCommandBehavior EventName="ItemTapped"
                                              Command="{Binding OnUpdateCommand}"
                                              EventArgsConverter="{StaticResource ItemTappedEventArgsConverter}" />
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ViewCell>
                            <ViewCell.ContextActions >
                                <MenuItem Command="{Binding Source={x:Reference goaltaskpage},Path=BindingContext.OnUpdateCommand }"
                              CommandParameter="{Binding .}"
                              IsDestructive="True"                              
                              Text="Edit"/>
                                <MenuItem Command="{Binding Source={x:Reference goaltaskpage},Path=BindingContext.DeleteCommand }"
                              CommandParameter="{Binding .}"
                              IsDestructive="True"                              
                              Text="Delete"/>



                            </ViewCell.ContextActions>
                            <Grid ColumnSpacing="5" Padding="3">
                                <Frame CornerRadius="20" 
                                   HasShadow="true"
                               BackgroundColor="WhiteSmoke"                                 
                                   Padding="8">

                                    <Grid  Padding="2" HorizontalOptions="FillAndExpand">
                                        <RelativeLayout VerticalOptions="Center"/>


                                        <StackLayout Grid.Row="0" Grid.Column="4" Orientation="Horizontal" Padding="10" IsVisible="{Binding Source={x:Reference goaltaskpage},Path=BindingContext.IsVisible}">
                                            <Switch 
                                        x:Name="switchTask"
                                       IsToggled="{Binding IsCompleted,Mode=TwoWay}"
                                        
                                        Toggled="switch_Toggled">
                                            </Switch>
                                        </StackLayout>

                                        <Image Source="task.png" Aspect="AspectFit" Grid.Row="0" Grid.Column="0"></Image>


                                        <Label Grid.Column=" 1" Grid.ColumnSpan="3" Grid.Row="0" x:Name="label" 
                                         FontSize="Small"
                                               HorizontalTextAlignment="Start">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding taskName}" FontSize="Medium" TextColor="Black" />
                                                    <Span Text="{x:Static x:Environment.NewLine}" />
                                                    <Span Text="{Binding RemainingDays}" FontSize="Small"/>
                                                    <Span Text=" Day(s) left" FontSize="Micro" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>



                                        <Grid Grid.Column=" 4" Grid.Row="0" VerticalOptions="CenterAndExpand" IsVisible="{Binding  Source={x:Reference goaltaskpage},Path=BindingContext.IsVisibleTask}">
                                            <plugin:ProgressRing HeightRequest="60" Scale="1" WidthRequest="60" RingThickness="3" Progress="{Binding Progress}" RingBaseColor="Wheat" ProgressColor="Green" />
                                            <StackLayout VerticalOptions="CenterAndExpand">
                                                <Label FontAttributes="Bold" FontSize="17" VerticalOptions="CenterAndExpand"
                                                   HorizontalOptions="CenterAndExpand" TextColor="Gray" Text="{Binding PendingPercentage,StringFormat='{0}'}"/>
                                                <Label Text="%" HorizontalTextAlignment="Center"/>
                                            </StackLayout>

                                        </Grid>
                                    </Grid>




                                </Frame>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ImageButton Source="add.png"
                Command="{Binding OnAddCommand}"
                IsEnabled="{Binding IsNotBusy}"
                Grid.Row="4"
                Grid.Column="2"
                         AbsoluteLayout.LayoutFlags="PositionProportional"
				AbsoluteLayout.LayoutBounds="1, 1, AutoSize, AutoSize"
            />


        </AbsoluteLayout>
        
      
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy  }"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="FillAndExpand"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="3"/>



    </Grid>
</ContentPage>