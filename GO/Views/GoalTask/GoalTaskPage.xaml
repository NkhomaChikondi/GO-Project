<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:Viewmodel="clr-namespace:GO.ViewModels.TaskInGoals"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit" 
             xmlns:plugin="clr-namespace:ProgressRingControl.Forms.Plugin;assembly=ProgressRing.Forms.Plugin"
             xmlns:helpers="clr-namespace:GO.Font"
             x:Class="GO.Views.GoalTask.GoalTaskPage"
               Title="Tasks In Goal"
              
              x:Name="goaltaskpage"
             >
    <ContentPage.BindingContext>
        <Viewmodel:GoalTaskViewModel/>
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <xct:ItemTappedEventArgsConverter x:Key="ItemTappedEventArgsConverter" />
        </ResourceDictionary>
        <ResourceDictionary>
            <xct:ItemSelectedEventArgsConverter x:Key="ItemSelectedEventArgsConverter" />
        </ResourceDictionary>
        <ResourceDictionary>
            <OnPlatform x:Key="MaterialFontFamily" x:TypeArguments="x:String">
                <On Platform="Android" Value="materialdesignicons-webfont.ttf#Material Design Icons"/>
            </OnPlatform>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height=" Auto"/>
        </Grid.RowDefinitions>
      
        <StackLayout Grid.Row="1" Grid.ColumnSpan="4" IsVisible="True" x:Name="StackTasklist">

            <SearchBar
                
                 HorizontalOptions="Fill"
                   VerticalOptions="CenterAndExpand"
                   Placeholder="Search goal Tasks..."
                   CancelButtonColor="#adb5bd"
                   PlaceholderColor="#adb5bd"
                   TextTransform="Lowercase"
                   HorizontalTextAlignment="Start">
                
            </SearchBar>
            <ListView ItemsSource="{Binding goalTasks}"
                  AbsoluteLayout.LayoutFlags="All"
						  AbsoluteLayout.LayoutBounds="0,0,1,1"
                   CachingStrategy="RecycleElement"
                   HasUnevenRows="True" 
                   Grid.ColumnSpan="4"
                   RefreshCommand="{Binding RefreshCommand}"
                   RefreshControlColor="Red"
                   SelectionMode="None"
                   SeparatorVisibility="None"
                   IsRefreshing="{Binding IsBusy,Mode=OneWay}">
                <ListView.Behaviors>

                    <xct:EventToCommandBehavior EventName="ItemTapped"
                                              Command="{Binding SendTaskIdCommand}"
                                              EventArgsConverter="{StaticResource ItemTappedEventArgsConverter}" />
                </ListView.Behaviors>

                <ListView.ItemTemplate>
                    <DataTemplate>

                        <ViewCell>
                            <ViewCell.ContextActions  >
                                <SwipeItem Command="{Binding Source={x:Reference goaltaskpage},Path=BindingContext.OnUpdateCommand }"
                                      CommandParameter="{Binding .}"
                                      IsDestructive="True"  
                                          
                                      IconImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                                 Glyph={x:Static helpers:IconFont.BookEdit},Size=55,Color=SkyBlue
                                             }"
                                />
                                <SwipeItem Command="{Binding Source={x:Reference goaltaskpage},Path=BindingContext.DeleteCommand }"
                                       CommandParameter="{Binding .}"
                                       IsDestructive="True" 
                               
                                       IconImageSource="{FontImage FontFamily={StaticResource MaterialFontFamily},
                                         Glyph={x:Static helpers:IconFont.Delete},Size=55,Color=SkyBlue
                                    }"
                                />



                            </ViewCell.ContextActions>
                            <Grid ColumnSpacing="5" Padding="6">
                                <Frame CornerRadius="15" 
                                   HasShadow="true"
                               BackgroundColor="#e9ecef"                                 
                                   Padding="5"
                                       Margin="4,0,7,0">

                                    <Grid   HorizontalOptions="FillAndExpand">
                                        <RelativeLayout VerticalOptions="Center"/>


                                        <StackLayout Grid.Row="0" Grid.Column="0" Padding="0,-30,0,0" Orientation="Horizontal">
                                            <Switch 
                                               x:Name="switchTask" 
                                                IsEnabled="{Binding IsEnabled}"
                                                IsToggled="{Binding IsCompleted}"
                                                Toggled="switch_Toggled">                                           
                                            </Switch>
                                        </StackLayout>

                                    


                                        <Label Grid.Column=" 0" Grid.ColumnSpan="4" Grid.Row="0" x:Name="label"  Padding="47,10,0,0"
                                        
                                               HorizontalTextAlignment="Start">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span Text="{Binding taskName}" FontSize="Medium" FontAttributes="Bold" />
                                                    <Span Text="{x:Static x:Environment.NewLine}" />
                                                    <Span Text="{Binding Status}" FontSize="Small" TextColor="#adb5bd"  />
                                                    <Span Text="   "/>
                                                    <Span Text="{Binding RemainingDays}" FontSize="Small"  TextColor="#adb5bd"/>
                                                    <Span Text=" Day(s) left" FontSize="Small" TextColor="#adb5bd"  />
                                                    
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>


                                        <Grid Grid.Column=" 4" Grid.Row="0" VerticalOptions="CenterAndExpand" Margin="0,-10,0,0">

                                            <plugin:ProgressRing HeightRequest="43" Scale="1" WidthRequest="43" RingThickness="5" Progress="{Binding Progress}" RingBaseColor="#495057" ProgressColor="#61a5c2"></plugin:ProgressRing>
                                            <StackLayout VerticalOptions="CenterAndExpand">
                                                <Label FontAttributes="Bold" FontSize="Small" VerticalOptions="CenterAndExpand" Margin="0,30,0,0"
                                                   HorizontalOptions="CenterAndExpand" TextColor="Gray" Text="{Binding PendingPercentage,StringFormat='{0}'}"/>
                                                <Label Text="%" HorizontalTextAlignment="Center" FontSize="Small"/>
                                                <Label Text="Subtask %" HorizontalTextAlignment="Center" FontSize="Small" TextColor="#adb5bd"/>
                                            </StackLayout>

                                        </Grid>
                                    </Grid>

                                </Frame>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <AbsoluteLayout BackgroundColor="Transparent">
                <ImageButton Margin="0,0,13,0" Source="{FontImage FontFamily={StaticResource MaterialFontFamily},
                Glyph={x:Static helpers:IconFont.PlusCircle},Size=75,Color=#61a5c2
                }"
                         BackgroundColor="Transparent"
                Command="{Binding OnAddCommand}"
                IsEnabled="{Binding IsNotBusy}"
               
                         AbsoluteLayout.LayoutFlags="PositionProportional"
				AbsoluteLayout.LayoutBounds="1, 1, AutoSize, AutoSize"
            />
            </AbsoluteLayout>
            
           


        </StackLayout>
        <StackLayout Grid.Column="0" Grid.ColumnSpan="4" IsVisible="False" x:Name="StackTaskBlank">
            <StackLayout Margin="0,90">
                <StackLayout>
                    <Image Source="blankpic.jpg"/>
                </StackLayout>
                <StackLayout Margin="40,30">
                    <Label Text="Create Your First Task" FontSize="20" FontAttributes="Bold" HorizontalOptions="CenterAndExpand"/>
                    <Label Text="Get started by creating tasks for your goal" FontSize="16" />

                    <Button   Grid.Column="0"  Grid.ColumnSpan="4" Text="   Create Task    " Command="{Binding OnAddCommand}" HorizontalOptions="FillAndExpand"  CornerRadius="15" Margin="0,20"  BackgroundColor="#61a5c2" CharacterSpacing="10" />


                </StackLayout>

            </StackLayout>
        </StackLayout>
        
        
      
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy  }"
                           VerticalOptions="CenterAndExpand"
                           HorizontalOptions="FillAndExpand"
                           Grid.RowSpan="2"
                           Grid.ColumnSpan="3"/>



    </Grid>
</ContentPage>